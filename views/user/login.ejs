<%- include('../partials/header.ejs') %>
<div id="form-container">
    <h2>Log In</h2>
    <form id="newUserCon" method="POST" action="/user/login">
        <section id="labels">
            <label for="username">Username</label><br><br>
            <label for="password">Password</label><br>
        </section>
        <section id="inputs">
            <input type="text" id="username" name="username" required><br><br>
            <input type="password" id="password" name="password" minlength="8" maxlength="64" required><br>
            <input type="submit" id="submitForm">
            <p><a href="/user/forgot_username">Forgot Username?</a> | <a href="/user/forgot_password">Forgot Password?</a></p>
        </section>
    </form>
</div>
